// Bolt-Action Cutscene
function room_AfterFadeIn()
{
// Reset the score
game.score = 0;
IntroProto.SetView(142);
}

function room_Load()
{
// No GUIs
SmallCredits.Visible = false;
Namebox.Visible = false;
Scoretable.Visible = false;
Bossbutton.Visible = false;

// Make sure player, GUI, and certain modes are turned off
Mouse.DisableMode(eModeTalkto);
Mouse.DisableMode(eModePickup);
Mouse.DisableMode(eModeWalkto);
Mouse.DisableMode(eModeTarget);
}

function room_RepExec()
{
// Play creepy music
aCreepyBoom.Play(eAudioPriorityHigh);

// Make sure player, GUI, and certain modes are turned off
cPrototype.on = false;
cPrototype.Transparency = 100;
Mouse.DisableMode(eModeTalkto);
Mouse.DisableMode(eModePickup);
Mouse.DisableMode(eModeWalkto);
Mouse.DisableMode(eModeTarget);

StartCutscene(eSkipAnyKeyOrMouseClick);
Earth.Animate(0, 5, eOnce, eNoBlock, eForwards);
Wait(300);
Atlas1.Visible = false; Atlas2.Visible = true;
News2.Visible = true; News1.Visible = false;
Zombified.Visible = true;
Wait(15);
Atlas2.Visible = false; Atlas3.Visible = true;
IntroProto.Animate(0, 5, eOnce, eNoBlock, eForwards);
Wait(300);
News3.Visible = true; News2.Visible = false;
Wait(300);
EndCutscene();

// Go to The Future
cPrototype.ChangeRoom(2);
}

function hHotspot1_AnyClick()
{
// Allow use to the skip the intro and go to The Future
cPrototype.ChangeRoom(2);
}
